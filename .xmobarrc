Config
  { font = "xft:Monoid:pixelsize=12"
  , position = Top

  -- layout
  , sepChar = "%"
  , alignSep = "}{"
  , template = " %StdinReader% }{ %battery%   %mydate% "

  -- general
  , lowerOnStart = False
  , commands =
    [ Run Com
      "date"
      ["+'%H.%M, %A'"]
      "mydate"
      300
    , Run BatteryP
      [ "BAT0" ]
      [ "-t", "<left>%"
      ]
      600
    , Run StdinReader
    ]
  }
