Config
  { font = "xft:Monoisome:pixelsize=12"
  , position = Top
	
  -- layout
  , sepChar = "%"
  , alignSep = "}{"
  , template = " %StdinReader% }{ %mydate% "
	
  -- general
  , lowerOnStart = False
  , allDesktops = True
  , persistent = True
  , commands = 
    [ Run Com "date" ["+\"%H.%M, %A\""] "mydate" 600
    , Run Date "%F (%a) %T" "date" 10
    , Run StdinReader
    ]
  }
